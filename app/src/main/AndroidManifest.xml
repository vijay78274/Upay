            android:name=".TransferSuccessfull"
            android:exported="false" />
        <activity
            android:name=".BankTransfer"
            android:exported="false" />
        <activity
            android:name=".NumberActivity"
            android:exported="false" />
        <activity
            android:name=".ScanActivity"
            android:exported="false"
